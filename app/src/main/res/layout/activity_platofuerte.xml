<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_card"
    android:padding="10dp"
    android:layout_marginBottom="12dp">

    <!-- BotÃ³n regresar -->
    <ImageView
        android:id="@+id/icono_regresar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_regresar"
        android:contentDescription="BotÃ³n regresar"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Imagen del plato -->
    <ImageView
        android:id="@+id/imgPlato"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circular_image_bg"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/icono_regresar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Contenido textual -->
    <LinearLayout
        android:id="@+id/layout_textos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/imgPlato"
        app:layout_constraintBottom_toBottomOf="@id/imgPlato"
        app:layout_constraintStart_toEndOf="@id/imgPlato"
        app:layout_constraintEnd_toStartOf="@id/btnOrdenar"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOMO SALTADO"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salteado con papas y arroz"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 32.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFCC00"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- BotÃ³n de ordenar -->
    <Button
        android:id="@+id/btnOrdenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar ðŸ›’"
        android:backgroundTint="#FF8800"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toTopOf="@id/layout_textos"
        app:layout_constraintBottom_toBottomOf="@id/layout_textos"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
