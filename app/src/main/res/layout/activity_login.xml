<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo_login">

    <ImageView
        android:id="@+id/icono_regresar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_regresar"
        android:contentDescription="Botón regresar"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>
    <ImageView
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:src="@drawable/logo1"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangulo_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jotione_regular"
            android:text="!Bienvenido a Punto Criollo!"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email_edittext"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/icon_email"
            android:drawableTint="@color/gray"
            android:fontFamily="@font/jotione_regular"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:paddingBottom="30dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/icon_password"
            android:drawableTint="@color/gray"
            android:fontFamily="@font/jotione_regular"
            android:hint="Contraseña:"
            android:inputType="textPassword"
            android:paddingBottom="30dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/custom_button"
            android:layout_width="300dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/orange"
            android:elevation="10dp"
            android:text="Ingresa ya"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:translationZ="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="¿No tienes una cuenta?"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/registro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text=" Regístrate ya"
                android:textColor="@color/red" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>