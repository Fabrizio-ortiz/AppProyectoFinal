<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/bg_card_pedido"
    android:backgroundTintMode="src_in"
    android:clipToPadding="false"
    android:elevation="4dp"
    android:backgroundTint="@null"
    android:minHeight="90dp"> <!-- fondo crema suave -->

    <TextView
    android:id="@+id/txtNumeroPedido"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pedido #12345"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#5D4037" /> <!-- Marrón oscuro -->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Fecha: 12/05/2025"
        android:textSize="14sp"
        android:textColor="#795548" /> <!-- Marrón medio -->

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: S/ 45.00"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#D84315" /> <!-- Rojo suave para resaltar -->
    </LinearLayout>
</LinearLayout>
